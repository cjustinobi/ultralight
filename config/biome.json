{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/portal-spec-tests/**",
      "**/config/**",
      "**/archived-browser-client",
      "**/browser-client",
      "**/proxy",
      "**/ui",
      "tsconfig.*.json",
      "**/testData",
      "**/scripts/**/*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNamespace": "error",
        "noNonNullAssertion": "warn",
        "useTemplate": "off",
        "useNodejsImportProtocol": "off",
        "noUselessElse": "off",
        "useSingleVarDeclarator": "off",
        "noParameterAssign": "off",
        "useSelfClosingElements": "off"
      },
      "suspicious": {
        "noRedeclare": "off",
        "noDuplicateClassMembers": "off",
        "useNamespaceKeyword": "off",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "off",
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useImportExtensions": "off",
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "noForEach": "off",
        "noUselessTernary": "off",
        "useLiteralKeys": "off",
        "noBannedTypes": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useSemanticElements": "off",
        "useButtonType": "off",
        "noSvgWithoutTitle": "off",
        "noNoninteractiveTabindex": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
    "overrides": [
    {
      "include": ["**/cli/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "include": ["**/portal-client/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
